---
import ProjectCard from "../ProjectCard.astro";
---
<section
  class="grid gap-6 xl:gap-12 p-6 lg:p-12 2xl:container 2xl:m-auto"
>
  <div class="flex flex-col gap-2">
    <h2 id="projects-title">Proyectos destacados...</h2>
    <span class="text-pretty">
      Explora nuestra experiencia y calidad en cada construcci√≥n.
    </span>
  </div>
  <div class="grid grid-rows-4 lg:grid-cols-2 lg:grid-rows-2 gap-4 m-auto w-full">
    <ProjectCard
      location="Suzhou, China"
      architects="Aedas"
      year="2018"
      area="296.083"
    >
      <img
        src="https://images.adsttc.com/media/images/5beb/cdd2/08a5/e5a5/8c00/0538/slideshow/%E4%B8%AD%E5%9B%BD%E8%8B%8F%E5%B7%9E%E4%B8%B0%E9%9A%86%E5%9F%8E%E5%B8%82%E4%B8%AD%E5%BF%83__by_Aedas_4.jpg?1542180247"
        alt=""
        slot="image"
        loading="eager"
      />
      <h4 slot="title">Hong Leong Center</h4>
      <span slot="subtitle">Centro Comercial</span>
    </ProjectCard>
    <ProjectCard
      location="Beijing, China"
      architects="Zaha Hadid Architects"
      year="2019"
      area="172.800"
    >
      <img
        src="https://images.adsttc.com/media/images/5dd4/02c4/3312/fda2/f100/009d/slideshow/07_ZHA_Leeza_%C2%A9Hufton_Crow.jpg?1574175416"
        alt=""
        slot="image"
        loading="eager"
      />
      <h4 slot="title">Leeza Soho</h4>
      <span slot="subtitle">Edificio de Oficinas</span>
    </ProjectCard>
    <ProjectCard
      location="Dubai, UAE"
      architects="SOMA"
      year="2021"
      area="84.000"
    >
      <img
        src="https://images.adsttc.com/media/images/6621/56db/219c/5108/f5f5/527a/slideshow/one-at-palm-residential-building-soma_3.jpg?1713460979"
        alt=""
        slot="image"
        loading="eager"
      />
      <h4 slot="title">One At Palm</h4>
      <span slot="subtitle">Edificio Residencial</span>
    </ProjectCard>
    <ProjectCard
      location="Kuala Lumpur, Malaysia"
      architects="Form Zero"
      year="2023"
      area="405"
    >
      <img
        src="https://images.adsttc.com/media/images/6602/4e46/b093/fa6c/7d08/3cd5/slideshow/borderless-house-formzero_14.jpg?1711427163"
        alt=""
        slot="image"
        loading="eager"
      />
      <h4 slot="title">Borderless House</h4>
      <span slot="subtitle">Casa Familiar</span>
    </ProjectCard>
  </div>
</section>
<style>
  section {
    grid-template-rows: min-content 1fr;
  }

  img {
    width: 40%;

    object-fit: cover;
  }

  @media screen and (width < 640px) {
    img {
      width: 100%;
      height: 200px;
    }
  }
</style>
<script>
  function updateHeading() {
    const heading = document.getElementById('projects-title');

    if (!heading) return;
    
    if (window.innerWidth < 640) {
      heading.textContent = 'Proyectos...';
    } else {
      heading.textContent = 'Proyectos destacados...';
    }
  }

  window.addEventListener('resize', updateHeading);
  window.addEventListener('load', updateHeading);
</script>