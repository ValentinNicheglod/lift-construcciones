---
const totalCircles = 10;
const circles = Array.from({ length: totalCircles }, (_, i) => {
  const sizePercentage = (i + 1) * 10;
  const opacity = 1 - (i * 0.1);
  return { sizePercentage, opacity };
});
---
<div class="circles">
    {circles.map((circle) => (
        <div
          style={`width: ${circle.sizePercentage}%; height: ${circle.sizePercentage}%; opacity: ${circle.opacity}; top: calc(50% - ${circle.sizePercentage / 2}%); left: calc(50% - ${circle.sizePercentage / 2}%);`}
        ></div>
    ))}
</div>
<style lang="scss">
  .circles {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    position: relative;

    div {
        border-radius: 50%;
        border: 1px solid #949EA9;
        position: absolute;
        display: flex;
        justify-content: center;
        align-items: center;
    }
  }
</style>
